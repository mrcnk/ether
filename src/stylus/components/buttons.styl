set-outline(border-color)
  set-border-with-radius(border-color)
  border-width 2px
  background-color transparent

add-outline(outline-color, font-color = secondary-color)
  &-outline
    set-outline(outline-color)
    color font-color

.button
  @extend button

  +m('small')
    padding:
      (button-vertical-padding - button-padding-step) (button-horizontal-padding - button-padding-step)

  +m('large')
    padding:
      (button-vertical-padding + button-padding-step) (button-horizontal-padding + button-padding-step)

  +m('primary')
    background-color primary-color
    color white-color

    add-outline(primary-color)

  +m('secondary')
    background-color secondary-color
    color white-color

    add-outline(secondary-color)

  +m('safe')
    background-color safe-color
    color white-color

    add-outline(safe-color, safe-color)

  +m('warning')
    background-color warning-color
    color white-color

    add-outline(warning-color, warning-color)

  +m('danger')
    background-color danger-color
    color white-color

    add-outline(danger-color, danger-color)

  +m('fullwidth')
    display block
    width 100%
    text-align center

  +m('outline')
    set-outline(common-color)
