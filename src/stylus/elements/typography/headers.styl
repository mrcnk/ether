restOfHeaders = 'h4,h5,h6'

_header
  font-weight font-weight-bold

// Some high school maths
sizing-progression(n)
  2 - ((n - 1) / 2)

set-header-sizing(font-size)
  font-size font-size rem
  margin-top font-size rem
  margin-bottom (font-size / 2) rem

/**
 * @example <h1>Example title header</h1>
 */
for i in (1..3)
  h{i}
    @extend _header
    set-header-sizing(sizing-progression(i))

{restOfHeaders}
  @extend h3
