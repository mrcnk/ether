common-color ?= colors.steel-grey-light
primary-color ?= colors.prime-blue
secondary-color ?= colors.prime-steel
base-border-color ?= colors.steel-grey-mid
text-color ?= colors.grey
white-color ?= colors.white

// State colors
safe-color ?= colors.green
warning-color ?= colors.yellow
danger-color ?= colors.red
