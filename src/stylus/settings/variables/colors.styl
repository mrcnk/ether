/**
* Colors
*/
colors = {
  white: #fff,
  prime-blue: #0c3dd7,
  light-blue: #54a0ff,
  red: #ee5253,
  green: #1dd1a1,
  yellow: #feca57,
  steel-grey-light: #f5f5f5,
  steel-grey-mid: #d6d6d6,
  dark-grey: #1e1e1e,
  grey: #4A4A4A,
  prime-steel: #222f3e
}

/**
* Body
*/
body-background-color ?= colors.white
body-color ?= colors.dark-grey

/**
* Exports (use only those variables outside)
*/
